{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "g++.exe",
            "args": [
                "-static-libstdc++",
                "-static",
                "-lpthread",
                "-fpermissive",
                "-std=c++2a",
                "-D=GLEW_STATIC",
                "${file}",
                "${fileDirname}\\src\\*.cpp",
                "${fileDirname}\\src\\vendor\\imgui\\*.cpp",
                "${fileDirname}\\src\\vendor\\stb_image\\*.cpp",
                "${fileDirname}\\src\\tests\\*.cpp",
                "-o",
                "${fileDirname}\\release\\${fileBasenameNoExtension}.exe",
                "-I${fileDirname}\\src",
                "-I${fileDirname}\\src\\vendor\\",
                "-I${fileDirname}\\src\\vendor\\imgui\\",
                "-I${fileDirname}\\src\\vendor\\stb_image\\",
                "-I${fileDirname}\\src\\vendor\\glm\\",
                "-I${fileDirname}\\src\\tests\\",
                "-LE:\\Git\\cpp_libs\\openGL\\lib-mingw-w64",
                "-IE:\\Git\\cpp_libs\\openGL\\include",
                "-lglfw3",
                "-LE:\\Git\\cpp_libs\\glew\\lib",
                "-IE:\\Git\\cpp_libs\\glew\\include",
                "-lglew32",
                "-lopengl32",
                "-luser32",
                "-lgdi32",
                "-lshell32",
            ],
            "options": {
                "cwd": "C:\\msys64\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "debug",
            "command": "g++.exe",
            "args": [
                "-g",
                 "-static-libstdc++",
                "-static",
                "-lpthread",
                "-fpermissive",
                "-std=c++2a",
                "-D=GLEW_STATIC",
                "${file}",
                "${fileDirname}\\src\\*.cpp",
                "${fileDirname}\\src\\vendor\\imgui\\*.cpp",
                "${fileDirname}\\src\\vendor\\stb_image\\*.cpp",
                "${fileDirname}\\src\\tests\\*.cpp",
                "-o",
                "${fileDirname}\\release\\${fileBasenameNoExtension}.exe",
                "-I${fileDirname}\\src",
                "-I${fileDirname}\\src\\vendor\\",
                "-I${fileDirname}\\src\\vendor\\imgui\\",
                "-I${fileDirname}\\src\\vendor\\stb_image\\",
                "-I${fileDirname}\\src\\vendor\\glm\\",
                "-I${fileDirname}\\src\\tests\\",
                "-LE:\\Git\\cpp_libs\\openGL\\lib-mingw-w64",
                "-IE:\\Git\\cpp_libs\\openGL\\include",
                "-lglfw3",
                "-LE:\\Git\\cpp_libs\\glew\\lib",
                "-IE:\\Git\\cpp_libs\\glew\\include",
                "-lglew32",
                "-lopengl32",
                "-luser32",
                "-lgdi32",
                "-lshell32",
            ],
            "options": {
                "cwd": "C:\\msys64\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
