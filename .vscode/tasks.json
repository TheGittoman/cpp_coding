{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "shell: cpp.exe build active file",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-std=c++2a",
                "${file}",
                "${fileDirname}\\src\\*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "C:/MinGW/mingw32/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
//"-std=c++2a -Wall ${file} ${fileDirname}/src/*.cpp -o ${fileDirname}\\${fileBasenameNoExtension}.exe"